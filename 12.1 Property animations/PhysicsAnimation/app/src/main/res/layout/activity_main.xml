<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <me.mahakagg.physicsanimation.SpringAnimTextView
        android:id="@+id/springAnim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spring_animation"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/flipAnim"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.434" />

    <me.mahakagg.physicsanimation.FlingAnimTextView
        android:id="@+id/flipAnim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fling_animation"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/springAnim"
        app:layout_constraintVertical_bias="0.434" />

</androidx.constraintlayout.widget.ConstraintLayout>